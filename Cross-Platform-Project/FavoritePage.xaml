<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Cross_Platform_Project.FavoritesPage"
    Title="">

    <ListView x:Name="FavoritesList">
        <ListView.ItemTemplate>
            <DataTemplate>
             <TextCell
              Text="{Binding title}"
              Detail="{Binding GenreText}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>

</ContentPage>