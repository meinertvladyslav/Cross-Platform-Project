<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cross_Platform_Project.MainPage">

    <ScrollView>
        <VerticalStackLayout>
            
            <SearchBar x:Name="SearchBox"
                           Placeholder="Search here "
                           TextChanged="Looking"/>
        
         <ListView x:Name="ListOfMovies" ItemTapped="ListOfMovies_Tapped">
         <ListView.ItemTemplate>
         <DataTemplate>
                        <TextCell Text="{Binding director}"
                         Detail="{Binding rating}" />
                    
         </DataTemplate>
         </ListView.ItemTemplate>
         </ListView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
