<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cross_Platform_Project.MainPage"
             Title="">
               
    <ContentPage.MenuBarItems>
        <MenuBarItem x:Name="Menu" Text="Menu">
            <MenuFlyoutItem Text="History" Clicked=""/>
            <MenuFlyoutSeparator/>
            <MenuFlyoutItem Text="Favorite"/>
        </MenuBarItem>
                
    </ContentPage.MenuBarItems>


            <VerticalStackLayout
        HorizontalOptions="Center"
        VerticalOptions="Center"
        WidthRequest="350">

        <SearchBar x:Name="SearchBox"
                           Placeholder="Search here "
                           TextChanged="Looking"/>
        
         <ListView x:Name="ListOfMovies" ItemTapped="ListOfMovies_Tapped">
         <ListView.ItemTemplate>
         <DataTemplate>
             
                        <TextCell Text="{Binding title}"
                         Detail="{Binding GenreText}" />
                    
         </DataTemplate>
         </ListView.ItemTemplate>
         </ListView>

        </VerticalStackLayout>
    

</ContentPage>
