<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Cross_Platform_Project.AccountsPage"
    Title="Accounts"
    Shell.NavBarIsVisible="True">

	<VerticalStackLayout Padding="20" Spacing="10">

		<Label
            Text="Select account"
            FontSize="20"
            FontAttributes="Bold"
            HorizontalOptions="Center" />

		<CollectionView
            ItemsSource="{Binding Accounts}"
            SelectionMode="Single"
            SelectionChanged="OnAccountSelected">

			<CollectionView.ItemTemplate>
				<DataTemplate>
					<Frame
                        Padding="15"
                        Margin="0,5"
                        CornerRadius="10"
                        BorderColor="LightGray">

						<Label
                            Text="{Binding Name}"
                            FontSize="18" />
					</Frame>
				</DataTemplate>
			</CollectionView.ItemTemplate>

		</CollectionView>
        <Button
    Text="Add account"
    Clicked="CreateAccountClicked"
    BackgroundColor="Black"
    TextColor="White"
    CornerRadius="10" />
    </VerticalStackLayout>
</ContentPage>